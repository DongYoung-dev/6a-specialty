        href="https://fonts.googleapis.com/css2?family=Do+Hyeon&family=Dongle:wght@300;400&family=Gamja+Flower&family=IBM+Plex+Sans+KR:wght@100&family=Jua&display=swap"
        rel="stylesheet">

    <!-- JS *정확한 용도 검색 필요-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.js"></script>

    <style>
        * {
            font-family: 'Jua', sans-serif;
        }

        html,
        body {
            margin: 0;

            padding: 0;

            min-width: 100%;
            width: 100%;
            max-width: 100%;

            min-height: 100%;
            height: 100%;
            max-height: 100%;

            background-color: #F1DCBD;
        }

        .icon-text {
            position: relative;
            right: 700px;
            bottom: 230px;
        }

        .logo {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: white;
        }

        .wrap label {
            font-weight: 300;
            color: #5A3B1A;
        }

        .posting-box {
            border: 1px solid #5A3B1A;
            border-radius: 10px;
            padding: 20px;
            max-width: 500px;
            margin: 60px auto 30px auto;
        }

        a {
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

        h1 {
            margin-top: 16px;
        }

        .img-container {
            width: 100%;
        }

        .img-wrap {
            max-width: 500px;
            margin: 0 auto;
        }

        #img-preview {
            margin: 34px 0 50px 0;
            width: 100%;
            height: 330px;
        }

        .url {
            margin-bottom: 16px;
        }

        /*사용자 임의 변경 불가*/
        textarea {
            resize: none;
        }

        .btn-wrap {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        button {
            width: 150px;
            height: 40px;
            font-size: 15px;
            margin-left: 10px;
        }

        .footer {
            background-color: #F1DCBD;
            margin-top: 70px;
        }
    </style>

    <script>
        //등록하기 버튼 클릭 시 현재문서의 데이터를 posting으로 넘겨주고 alert과 함께 index.html로 이동
        function posting() {
            let title = $('#title').val()
            let contents = $('#contents').val()
            let now = new Date()
            let date = now.toDateString()
            let time = now.getTime()

            let data = { title, contents, date, time }

            $.ajax({
                type: "POST",
                url: "/api/post",
                data: data,
                dataType: 'json',
                success: function (response) {
                    alert(response["result"])
                    window.location.href = "/"
                }
            });
        }

    </script>


</head>


<body>
    <!-- logo -->
    <div class="logo">
        <img src="banner.png">
    </div>

    <!-- posting-box -->
    <section class="main-box">
        <div class="posting-box" id="posting-box">
            <div class="wrap">
                <label class="label">title</label>
                <div class="control">
                    <input class="input" type="text" id="title" placeholder="제목">
                </div>
                <div class="field">
                    <label class="label">contents</label>
                    <div class="control">
                        <input class="input" type="text" id="contents" placeholder="내용">
                    </div>
                </div>
            </div>
        </div>


        <!-- btn-group -->
        <div class="btn-wrap">
            <button onclick="posting()" type="button" class="btn btn-dark btn-lg" id="posting-btn">등록하기</button>
            <button onclick="window.location.href='/'" type="button" class="btn btn-secondary btn-lg mr-3">취소하기</button>
        </div>
        </div>
    </section>

    <!--footer-->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong>RengaBro's Blog</strong> by <strong>DongYoung</strong> The source code is licensed
