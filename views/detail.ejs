            text-decoration: none;
            color: black;
            font-weight: bold;
        }

        h1 {
            margin-top: 16px;
        }

        .img-container {
            width: 100%;
        }

        .img-wrap {
            max-width: 500px;
            margin: 0 auto;
        }

        #img-preview {
            margin: 34px 0 50px 0;
            width: 100%;
            height: 330px;
        }

        .url {
            margin-bottom: 16px;
        }

        /*사용자 임의 변경 불가*/
        textarea {
            resize: none;
        }

        .btn-wrap {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        button {
            width: 150px;
            height: 40px;
            font-size: 15px;
            margin-left: 10px;
        }

        .footer {
            background-color: #F1DCBD;
            margin-top: 70px;
        }
    </style>

    <script>
        const pathName = window.location.pathname;
        const postId_arr = pathName.split("/")
        const postId = postId_arr[2]

        $(document).ready(function () {
            detail_page(),
            listing();
            $.ajax({
                type: "GET",
                url: "/api/users/me",
                success: function (response) {
                    if (response['auth'] === 'falseLogin') {
                        $(`.isUser`).hide();
                    } else if (response['auth'] === 'errorLogin') {
                        $(`.isUser`).hide();
                    }
                },
                error: function (error) {
                },
            });
        });

        //받아온 name 값이랑 같은 데이터들을 현재 문서의 데이터에 넣어주고 url값을 append 해줌
        function detail_page() {
            $.ajax({
                type: "GET",
                url: `/api/post/${postId}`,  // -- 홈에서 클릭한 게시물의 이름을 받아오고 db에서 동일한 이름을 가진 데이터를 가져옴 --
                data: {},
                success: function (response) {
                    let rows = response['post']

                    document.getElementById("title").innerHTML = rows['title']
                    document.getElementById("name").innerHTML = rows['name']
                    document.getElementById("contents").innerHTML = rows['contents']
                    document.getElementById("date").innerHTML = rows['date']
                }
            })
        }

        function apply_comment() {
            let comment = $("#comment").val()
            $.ajax({
                type: "POST",
                url: `/api/post/${postId}/comment`,  // -- 홈에서 클릭한 게시물의 이름을 받아오고 db에서 동일한 이름을 가진 데이터를 가져옴 --
                data: {
                    comment,
                },
                success: function (response) {
                    location.reload()
                }
            })
        }

        function delete_post(num) {
            $.ajax({
                type: "DELETE",
                url: `/api/post/${postId}/comment`,  // -- 홈에서 클릭한 게시물의 이름을 받아오고 db에서 동일한 이름을 가진 데이터를 가져옴 --
                data: {
                    commentId: num,
                },
                success: function (response) {
                    location.reload()
                }
            })
        }

        function update_post(num) {
            let comment = $(`#updateComment${num}`).val()
            $.ajax({
                type: "PATCH",
                url: `/api/post/${postId}/comment`,  // -- 홈에서 클릭한 게시물의 이름을 받아오고 db에서 동일한 이름을 가진 데이터를 가져옴 --
                data: {
                    commentId: num,
                    comment
                },
                success: function (response) {
                    location.reload()
                }
            })
        }

        function listing() {
            $.ajax({
                type: 'GET',
                url: `/api/post/${postId}/comment`,
                data: {},
                success: function (response) {
                    let rows = response['comment']
                    for (let i = 0; i < rows.length; i++) {
                        let comment = rows[i]['comment']
                        let nickname = rows[i]['nickname']
                        let commentId = rows[i]['commentId']

                        let temp_html = `
                            <div class="posting-box" id="posting-box">
                                <div class="wrap">
                                    <div class="field">
                                        <div class="control">
                                            <textarea class="input" id="updateComment${commentId}">${comment}</textarea>
                                        </div>
                                        <div class ="isUser">
                                        <button onclick="delete_post(${commentId})">삭제해라</button>
                                        <button onclick="update_post(${commentId})">수정해라</button>
                                        </div>
                                    </div>
                                </div>
                            </div>`

                        $('#cards-box').append(temp_html)
                    }
                }
            })
        }

    </script>
</head>

<body>

    <!-- logo -->
    <div class="logo">
        <img src="../banner.png">
    </div>

    <!-- posting-box -->
    <section class="main-box">
        <div class="posting-box" id="posting-box">
            <div class="wrap">
                <div class="field">
                    <label class="label">title</label>
                    <div class="control">
                        <textarea class="input" id="title" readonly></textarea>
                    </div>
                </div>
                <div class="field">
                    <label class="label">name</label>
                    <div class="control">
                        <textarea class="input" id="name" readonly></textarea>
                    </div>
                </div>
                <div class="field">
                    <label class="label">contents</label>
                    <div class="control">
                        <textarea class="input" id="contents" readonly></textarea>
                    </div>
                </div>
                <div class="field">
                    <label class="label">dates</label>
                    <div class="control">
                        <textarea class="input" id="date" readonly></textarea>
                    </div>
                </div>


                <div class="btn-wrap">
                    <button type="button" class="isUser btn btn-dark btn-lg" onclick="location.replace('/update/'+postId)">
                        수정하기
                    </button>
                    <button onclick="window.location.href='/'" type="button" class="btn btn-secondary btn-lg mr-3">
                        뒤로가기
                    </button>
                </div>
            </div>


        </div>
    </section>

    <section class="main-box">
        <div class="posting-box" id="posting-box">
            <div class="wrap">
